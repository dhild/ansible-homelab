# ansible managed

configDirectory=/etc/pihole
installDirectory=/opt/pihole
INSTALL_WEB=true
DNSMASQ_LISTENING=single
DNS_FQDN_REQUIRED=true
DNS_BOGUS_PRIV=true
DNSSEC=true
CONDITIONAL_FORWARDING=false
PIHOLE_INTERFACE={{ ansible_default_ipv4.interface }}
IPV4_ADDRESS={{ ansible_default_ipv4.address }}/24
IPV6_ADDRESS={{ pihole_ipv6_address }}
QUERY_LOGGING=true
{% for addr in upstream_dns_servers %}
PIHOLE_DNS_{{ loop.index }}={{ addr }}
{% endfor %}
CONDITIONAL_FORWARDING=true
CONDITIONAL_FORWARDING_IP={{ router_ipv4_address }}
CONDITIONAL_FORWARDING_DOMAIN={{ router_domain }}
CONDITIONAL_FORWARDING_REVERSE={{ router_reverse_lookup }}
